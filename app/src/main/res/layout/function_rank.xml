<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="@color/whilte"
    android:layout_marginTop="@dimen/activity_size_5">
    <!--排名布局-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <!--排名图片-->
        <ImageView
            android:id="@+id/teacher_rank"
            android:layout_width="@dimen/activity_size_40"
            android:layout_height="@dimen/activity_size_40"
            android:background="@drawable/function_rank"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            />
        <!--排名文字-->
        <TextView
            android:id="@+id/teacher_rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rank"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teacher_rank"
            android:layout_marginLeft="@dimen/activity_size_5"

            />

        <!--排名数字-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/green"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teacher_rank_text"

            />
        <ImageView
            android:layout_width="@dimen/activity_size_1"
            android:layout_height="@dimen/activity_size_40"
            android:background="@drawable/function_vertical_line"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            />

    </RelativeLayout>



    <!--积分布局-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_size_3">
        <!--积分图片-->
        <ImageView
            android:id="@+id/teacher_score"
            android:layout_width="@dimen/activity_size_40"
            android:layout_height="@dimen/activity_size_40"
            android:background="@drawable/function_score"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_3"
            />
        <!--积分文字-->
        <TextView
            android:id="@+id/teacher_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teacher_score"
            android:layout_marginLeft="@dimen/activity_size_5"

            />

        <!--积分数字-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teacher_score_text"

            />
        <ImageView
            android:layout_width="@dimen/activity_size_1"
            android:layout_height="@dimen/activity_size_40"
            android:background="@drawable/function_vertical_line"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            />

    </RelativeLayout>

    <!--等级布局-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/activity_size_2">
        <!--等级图片-->
        <ImageView
            android:id="@+id/teacher_grade"
            android:layout_width="@dimen/activity_size_40"
            android:layout_height="@dimen/activity_size_40"
            android:background="@drawable/function_grade"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            />
        <!--等级文字-->
        <TextView
            android:id="@+id/teacher_grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grade"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teacher_grade"
            android:layout_marginLeft="@dimen/activity_size_5"

            />

        <!--等级数字-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/yellow"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/teacher_grade_text"

            />
        <ImageView
            android:layout_width="@dimen/activity_size_1"
            android:layout_height="@dimen/activity_size_40"
            android:background="@drawable/function_vertical_line"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_size_10"
            />

    </RelativeLayout>









</LinearLayout>
