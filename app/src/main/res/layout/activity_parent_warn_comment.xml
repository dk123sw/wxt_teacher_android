<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#9be5b4">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="园丁沟通"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <RelativeLayout
            android:id="@+id/up_jiantou"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_exit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fanhui" />
        </RelativeLayout>
        <Button
            android:id="@+id/chat_information"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_fabiao" />
    </RelativeLayout>




    <ListView
        android:id="@+id/parent_warn_commentlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:cacheColorHint="@color/white"
        android:paddingBottom="50dp">

    </ListView>
    <LinearLayout
        android:id="@+id/edit_and_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:src="@drawable/type_select_btn_nor"/>

        <EditText
            android:id="@+id/parent_warn_comment_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/bg_edittext"
            android:hint="请输入..."
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btn_parent_send"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:background="@drawable/ic_cuiyixia"
            android:layout_centerVertical="true"
            android:text="发送"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            />
        </LinearLayout>


</RelativeLayout>
