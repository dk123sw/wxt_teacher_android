<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/edit_and_send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/zsq_bg_color">


            <cn.xiaocool.wxtteacher.ui.ClearEditText
                android:id="@+id/group_name_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/activity_size_10"
                android:background="@drawable/shape_wihte_frame"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入群聊名称"
                android:textColor="@color/black"
                android:textColorHint = "@color/zsq_text_gray_color"
                android:padding="5dp" />


        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zsq_bg_color">

            <cn.xiaocool.wxtteacher.ui.ClearEditText
                android:id="@+id/filter_edit"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/activity_size_10"
                android:background="@drawable/shape_wihte_frame"
                android:drawableLeft="@drawable/search_bar_icon_normal"
                android:hint="请输入关键字搜索"
                android:textColor="@color/black"
                android:textColorHint = "@color/zsq_text_gray_color"
                android:singleLine="true"
                android:textSize="15.0dip" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>