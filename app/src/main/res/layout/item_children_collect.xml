<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal" >

        <cn.xiaocool.wxtteacher.ui.RoundImageView
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_margin="10dip"
            android:scaleType="centerInside"
            android:id="@+id/item_head"
            android:src="@drawable/default_avatar" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayout_profession_circle_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">


                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="5dip"
                    android:text="少东家"
                    android:textColor="@color/list_title_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_size_10"
                    android:textSize="12sp"
                    android:text="20:20"
                    android:textColor="@color/list_time_color"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relativeLayout_profession_circle_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈测试"
                    android:textColor="@color/list_content_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/zsq_bg_color"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/daijie_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_pic_height"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_size_10"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/daijie_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daijie_img"
            android:layout_margin="@dimen/activity_size_10"
            android:text="家长，这个人可以接走了"
            android:textColor="@color/list_content_color"
            android:textSize="14sp"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/call_and_alert_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/zsq_bg_color"
            android:layout_alignParentTop="true" />

        <TextView
            android:drawableLeft="@drawable/ic_zhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" 等待家长确认"
            android:textColor="#ff5722"
            android:textSize="14sp"
            android:layout_margin="@dimen/activity_size_10"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/ic_chengdise"
                android:layout_margin="@dimen/activity_size_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  呼叫"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/ic_hujiao"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/ic_lvdise"
                android:layout_margin="@dimen/activity_size_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  提醒"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_tixing"
                android:textColor="@color/white"
                />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/zsq_bg_color"
        android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/daijie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 等待家长确认"
            android:textColor="#ff5722"
            android:textSize="16sp"
            android:layout_margin="@dimen/activity_size_10"
            />
    </RelativeLayout>
</LinearLayout>


