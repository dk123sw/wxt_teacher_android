<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/view_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativteLayout_activty_video_information_item"
        android:layout_width="match_parent"
        android:layout_height="50dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center"
            android:text="现场情况"
            android:textColor="@color/title_color"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_video_information_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dip"
            android:src="@drawable/back_whrit"
             android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/video_suface" />

    <TextView
        android:id="@+id/textView_video_information_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相关资讯" 
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/information_comment_back"/>

    <ListView
        android:id="@+id/listView_video_information_comment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="#50C0C0C0"
        android:dividerHeight="1px">
    </ListView>

</LinearLayout>