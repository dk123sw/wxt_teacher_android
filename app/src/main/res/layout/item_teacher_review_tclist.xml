<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="60dp">


    <cn.xiaocool.wxtteacher.ui.RoundImageView
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:layout_margin="10dip"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:id="@+id/teacher_avatar"
        android:src="@drawable/default_square" />


    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宝宝名称"
        android:textSize="16sp"
        android:textColor="@color/list_content_color"
        android:layout_toRightOf="@+id/teacher_avatar"
        android:layout_marginLeft="@dimen/activity_size_5"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/comments_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/title_bg_color"
        android:layout_centerVertical="true"
        android:text="2条"
        android:layout_marginRight="25dp"
        />
    <ImageView
        android:layout_width="@dimen/activity_size_10"
        android:layout_height="@dimen/activity_size_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_size_10"
        android:background="@drawable/right_jiantou"
        />
</RelativeLayout>