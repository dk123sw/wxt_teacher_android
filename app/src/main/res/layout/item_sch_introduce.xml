<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/activity_size_60"
    android:orientation="vertical"
    android:background="@color/whilte"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/activity_size_10"
        android:layout_weight="1">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="神马数据"
            android:textSize="16sp"
            android:textColor="@color/list_content_color"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_size_15"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            
            <ImageView
                android:id="@+id/flag_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_size_10"
                />


            <TextView
                android:id="@+id/number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/flag_img"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_size_5"
                />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
