<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/recipes_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="@dimen/activity_size_200"
            android:layout_height="@dimen/activity_size_30"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/recipes_info"
            android:layout_alignTop="@id/recipes_picture"
            android:id="@+id/recipes_title" />
        <TextView
            android:id="@+id/recipes_info"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:layout_alignBottom="@id/recipes_picture"
            android:layout_marginLeft="120dp"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/right_jiantou"/>



    </RelativeLayout>

</LinearLayout>
