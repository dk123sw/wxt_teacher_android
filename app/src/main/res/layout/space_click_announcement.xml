<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:text="通知公告"
            android:textColor="@color/whilte"
            android:textSize="20sp" />
        <RelativeLayout
            android:id="@+id/up_jiantou"
            android:layout_width="100dip"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fanhui"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:id="@+id/btn_exit" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_add"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" >

            <ImageView
                android:id="@+id/add_announcement"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_fabiao"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
          />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp"
        android:background="@color/gray">
        <RelativeLayout
            android:id="@+id/address_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/whilte"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="获取的通知"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_adddress"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/address_selector"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/address_gardener"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/whilte"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="发布的通知"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_adddress"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/address_selector"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>


</LinearLayout>
