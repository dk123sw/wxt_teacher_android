<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp"
    android:orientation="horizontal">
    <!--第一个按钮-->
    <RelativeLayout
        android:id="@+id/space_courseware"

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <ImageView
            android:id="@+id/btn_courseware"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/banjikecheng"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="宝宝课程"
            android:layout_below="@+id/btn_courseware"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>

    <!--第二个按钮-->

    <RelativeLayout
        android:id="@+id/space_activity"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <ImageView
            android:id="@+id/btn_activity"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/banjihuodong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="班级活动"
            android:layout_below="@+id/btn_activity"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>

    <!--第三个按钮-->

    <RelativeLayout
        android:id="@+id/space_info_shenhe"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <ImageView
            android:id="@+id/btn_recip"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/xinxishenhe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="信息审核"
            android:layout_below="@+id/btn_recip"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>
    <!--第四个按钮-->

    <RelativeLayout
        android:id="@+id/space_introduce"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <ImageView
            android:id="@+id/btn_introduce"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/yuansuoqingkuang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="园所情况"
            android:layout_below="@+id/btn_introduce"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>
</LinearLayout>
