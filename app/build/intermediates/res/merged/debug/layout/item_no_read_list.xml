<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal" >


        <cn.xiaocool.wxtteacher.ui.RoundImageView
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_margin="10dip"
            android:scaleType="centerInside"
            android:id="@+id/item_head"
            android:src="@drawable/default_square" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="20"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingRight="5dip"
                android:text="少东家"
                android:textColor="@color/black"
                android:textSize="10sp" />



            <RelativeLayout
                android:id="@+id/relativeLayout_profession_circle_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈测试"
                    android:textColor="@color/zsq_text_gray_color"
                    android:textSize="10sp" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/sms"
                android:layout_width="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:src="@drawable/ic_xiaoxi1" />
            <ImageView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="30dp"
                android:src="@drawable/dianhua" />


        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/item_information"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="30dp"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_hujiao1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/zsq_bg2_color"></View>



</LinearLayout>