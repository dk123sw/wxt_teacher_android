<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/funciton_header"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <!--头像-->

        <!--圆形头像-->
        <cn.xiaocool.wxtteacher.ui.RoundImageView
            android:id="@+id/iv_me_fragment_avatar"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:scaleType="centerInside"
            android:src="@drawable/default_avatar"
            android:layout_marginLeft="@dimen/activity_size_20"/>

        <!--头像右边文字姓名-->
        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="@dimen/activity_size_120"
            android:layout_height="@dimen/activity_size_25"
            android:text=""
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/green"
            android:layout_toRightOf="@+id/iv_me_fragment_avatar"
            android:layout_marginLeft="@dimen/activity_size_20"
            android:layout_marginTop="@dimen/activity_size_15"

            />


    <LinearLayout
        android:id="@+id/class_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_me_fragment_avatar"
        android:layout_below="@+id/teacher_name">


        <!--头像右边文字介绍-->
        <TextView
            android:id="@+id/teacher_introduce"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_size_25"
            android:text=""
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/gray"
            android:layout_below="@+id/teacher_name"
            android:layout_marginLeft="@dimen/activity_size_20"
            android:layout_marginTop="@dimen/activity_size_5"
            />


        <!--文字介绍右边小图标-->
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/teacher_name"
            android:background="@drawable/function_small_arrow"
            android:layout_marginLeft="@dimen/activity_size_5"
            android:layout_marginTop="@dimen/activity_size_5"

            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/activity_size_5"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:text=""/>

    </LinearLayout>






</RelativeLayout>
