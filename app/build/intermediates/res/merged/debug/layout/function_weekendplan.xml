<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/view_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:text="周计划"
            android:textColor="@color/whilte"
            android:textSize="20sp" />
        <RelativeLayout
            android:id="@+id/up_jiantou"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/back_whrit"
                android:layout_margin="@dimen/activity_size_10"
                android:id="@+id/btn_exit" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_jiantou"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fabiao"
                android:id="@+id/btn_add" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/location_pop"
        android:layout_width="@dimen/activity_size_0"
        android:layout_height="@dimen/activity_size_0"
        android:layout_gravity="right" />

    <ListView
        android:id="@+id/function_weekendplanlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/zsq_bg_color"
        android:dividerHeight="1dp">

    </ListView>
</LinearLayout>