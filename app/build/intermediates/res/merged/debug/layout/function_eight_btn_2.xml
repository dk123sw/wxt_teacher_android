<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp"
    android:orientation="horizontal">
    <!--第一个按钮-->
    <RelativeLayout
        android:id="@+id/space_attendance"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <ImageView
            android:id="@+id/btn_attendance"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/teacherkaoqin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="老师考勤"
            android:layout_below="@+id/btn_attendance"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>

    <!--第二个按钮-->

    <RelativeLayout

        android:id="@+id/space_class_attrndance"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <ImageView
            android:id="@+id/btn_attendanc"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/banjikaoqin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="班级考勤"
            android:layout_below="@+id/btn_attendanc"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>

    <!--第三个按钮-->

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <RelativeLayout
            android:id="@+id/space_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/btn_leave"
                android:layout_width="@dimen/activity_size_50"
                android:layout_height="@dimen/activity_size_50"
                android:background="@drawable/function_btn_leave"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="在线请假"
                android:layout_below="@+id/btn_leave"
                android:layout_marginTop="@dimen/activity_size_8"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"
                />


        </RelativeLayout>



    </RelativeLayout>
    <!--第四个按钮-->

    <RelativeLayout
        android:id="@+id/space_review"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:background="@color/whilte">
        <ImageView
            android:id="@+id/btn_review"
            android:layout_width="@dimen/activity_size_50"
            android:layout_height="@dimen/activity_size_50"
            android:background="@drawable/teacherdianping"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_size_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="老师点评"
            android:layout_below="@+id/btn_review"
            android:layout_marginTop="@dimen/activity_size_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            />


    </RelativeLayout>
</LinearLayout>
