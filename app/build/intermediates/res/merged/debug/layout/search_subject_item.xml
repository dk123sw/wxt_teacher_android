<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_search_subject_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/default_square" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/layout_subject_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_search_subject_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="美食专栏"
                android:maxEms="6"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_search_subject_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="一京城就好吃10大火锅"
                android:maxEms="12"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
           android:id="@+id/btn_search_subject_dingyue" 
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/subscription"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="订阅"
            android:textColor="#99000000"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

</LinearLayout>