<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="40dp"
    android:orientation="horizontal">

    <!--第二条班级-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <!--小三角-->
        <ImageView
            android:layout_width="@dimen/activity_size_9"
            android:layout_height="@dimen/activity_size_17"
            android:background="@drawable/address_triangle"
            android:layout_marginLeft="@dimen/activity_size_30"
            android:layout_gravity="center_vertical"

            />
        <!--班级分组名称-->
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/activity_size_15"
            android:layout_gravity="center_vertical"


            />

        <!--分组人数-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/activity_size_110"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</LinearLayout>
