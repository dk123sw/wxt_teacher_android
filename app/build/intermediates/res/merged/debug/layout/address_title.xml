<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="46dp"
    android:background="@color/whilte"
    android:orientation="horizontal">

    <!--装家长、园丁、群聊、加号的布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/whilte"
        android:orientation="horizontal">
        <!--家长-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/address_title1.1"
            android:textSize="@dimen/activity_size_20"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/green"
            />
        <!--园丁-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/address_title1.2"
            android:textSize="@dimen/activity_size_20"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            />
        <!--群聊-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/address_title1.3"
            android:textSize="@dimen/activity_size_20"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            />
        <!--加号-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/address_title1.4"
            android:textSize="@dimen/activity_size_30"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            />

    </LinearLayout>

</LinearLayout>
