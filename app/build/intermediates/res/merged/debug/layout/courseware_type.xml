<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/courseware_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某课件"
            android:textSize="16sp"
            android:textColor="@color/list_content_color"
            android:layout_margin="@dimen/activity_size_10"
            />

        <ImageView
            android:id="@+id/youjiantou"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_size_10"
            android:background="@drawable/main_youjiantou"
            />

        <TextView
            android:id="@+id/courseware_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="18"
            android:textSize="16sp"
            android:textColor="@color/list_content_color"
            android:layout_margin="@dimen/activity_size_10"
            android:layout_toLeftOf="@id/youjiantou"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f2f2"/>

</LinearLayout>