<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:text="发起代接"
            android:textColor="@color/whilte"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/up_jiantou"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_exit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_fanhui" />
        </RelativeLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/choose_student"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_50"
                android:background="@color/white">

                <TextView
                    android:id="@+id/choose_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="选择学生"
                    android:paddingLeft="@dimen/activity_size_10"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_select_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_size_35"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/gray_arrow" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

            <EditText
                android:id="@+id/confim_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/title_color"
                android:gravity="top"
                android:hint="说明"
                android:textSize="@dimen/activity_size_16"
                android:padding="10dip"></EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/confim_addpic"
                    android:layout_width="@dimen/activity_size_100"
                    android:layout_height="@dimen/activity_size_100"
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_addpic_focused" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_user_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/app_name"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"/>



            </LinearLayout>



            <RelativeLayout
                android:id="@+id/send_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_size_40"
                android:layout_margin="@dimen/activity_size_10"
                android:background="@drawable/cornners_layout"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>